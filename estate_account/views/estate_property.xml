<odoo>
    <record id="inherit_property_form" model="ir.ui.view">
        <field name="name">Inherit Properties form</field>
        <field name="model">estate.property</field>
        <field name="inherit_id" ref="real_state.properties_form_view"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//button[@name='set_sold_action']" position="attributes">
                    <attribute name="invisible">state not in ['offer_accepted','sold']</attribute>
                </xpath>
                <xpath expr="//button[@name='set_canceled_action']" position="attributes">
                    <attribute name="invisible">state not in ['offer_accepted','sold']</attribute>
                </xpath>
                <xpath expr="//button[@name='set_force_action']" position="attributes">
                    <attribute name="invisible">state != 'sold'</attribute>
                </xpath>
            </data>
        </field>
    </record>

    <menuitem
            id="menu_invoice"
            name="Invoices"
            parent="real_state.real_state_menu"/>
    <menuitem
            id="menu_invoice_property"
            name="Invoice"
            parent="menu_invoice"
            action="account.action_move_out_invoice_type"/>
</odoo>