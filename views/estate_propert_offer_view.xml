<odoo>
    <data>

        <record id="offer_tree_view" model="ir.ui.view">
            <field name="name">Offer tree</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <field name="property_id"/>
                    <button name="set_accepted" string="Accept" type="object"
                            icon="fa-check"/>
                    <button name="set_refused" string="Refused" type="object"
                            icon="fa-times"/>
                    <field name="states"/>
                </tree>
            </field>
        </record>

        <record id="offer_form_view" model="ir.ui.view">
            <field name="name">Offer form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="property_id"/>
                            </group>
                            <group>
                                <field name="price"/>
                                <div>
                                    <button name="set_accepted" string="Accept" type="object"
                                            icon="fa-check"/>
                                    <button name="set_refused" string="Refused" type="object"
                                            icon="fa-times"/>
                                </div>
                                <field name="states"/>
                            </group>
                            <group>
                                <field name="validity"/>
                                <field name="date_deadline"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="offer_search_view" model="ir.ui.view">
            <field name="name">Offer Search</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <search>
                    <field name="price"/>
                    <field name="states"/>
                    <field name="partner_id"/>
                    <field name="property_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                </search>
            </field>
        </record>

        <record id="offer_action" model="ir.actions.act_window">
            <field name="name">Offer</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>