<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="employee_report_template" name="report template">
        <t t-call="web.html_container" t-encoding="utf-8">
            <t t-call="web.internal_layout">
                <t t-foreach="docs" t-as="employee">
                    <link ref="stylesheet" href="/upward_hr_reports/static/src/css/table_style.css"/>
                    <div style="position:relative">
                        <h2 class="class_red" style="display:inline;" t-esc="employee.name"/>
                        <img t-att-src="image_data_uri(employee.avatar_1920)"
                             style="position:fixed; right:5%; max-height:85pt;max-width:70%"
                             alt="Employee Image"/>
                    </div>
                    <div style="position:relative; font-size:12px; margin-top:7rem margin-right:2rem ">
                        <table class="table table-bordered  table-sm" style="width: 700px;">
                            <tbody>
                                <tr style="height: 23px;">
                                    <td class="border-top " style="height: 23px; width: 135px;">Work Mobile
                                    </td>
                                    <td class="border-top " style="height: 23px; width: 200px;">
                                        <span t-field="employee.mobile_phone"/>
                                    </td>
                                    <td class="border-top " style="height: 23px; width: 105px;">Work
                                        Phone
                                    </td>
                                    <td class="border-top " style="height: 23px; width: 170px;">
                                        <span t-field="employee.work_phone"/>

                                    </td>
                                </tr>
                                <tr style="height: 23px;">
                                    <td style="height: 23px; width: 135px;">Work Email</td>
                                    <td style="height: 23px; width: 200px;">
                                        <span t-field="employee.work_email"/>
                                    </td>
                                    <td style="height: 23px; width: 105px;">Location</td>
                                    <td style="height: 23px; width: 170px;">
                                        <span t-field="employee.work_location_id"/>
                                    </td>
                                </tr>
                                <tr style="height: 23px;">
                                    <td style="height: 23px; width: 135px;">Department</td>
                                    <td style="height: 23px; width: 200px;">
                                        <span t-field="employee.department_id"/>
                                    </td>
                                    <td style="height: 23px; width: 105px;">Job Position</td>
                                    <td style="height: 23px; width: 170px;">
                                        <span t-field="employee.job_id"/>
                                    </td>
                                </tr>
                                <tr style="height: 23px;">
                                    <td style="height: 23px; width: 135px;">Manager</td>
                                    <td style="height: 23px; width: 200px;">
                                        <span t-field="employee.parent_id"/>
                                    </td>
                                    <td style="height: 23px; width: 105px;">Coach</td>
                                    <td style="height: 23px; width: 170px;">
                                        <span t-field="employee.coach_id"/>
                                    </td>
                                </tr>
                                <tr style="height: 23px;">
                                    <td style="height: 23px; width: 135px;">Work Schedule</td>
                                    <td style="height: 23px; width: 200px;">
                                        <span t-field="employee.resource_calendar_id"/>
                                    </td>
                                    <td style="height: 23px; width: 105px;">Timezone</td>
                                    <td style="height: 23px; width: 170px;">
                                        <span t-field="employee.tz"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>


                    </div>

                    <div style="font-size:12px; margin-top:3rem;">
                        <h4 style="font-size:20px; ">Private Information</h4>
                        <table class="table table-bordered  table-sm"
                               style="height: 237px; width: 700px;">
                            <tbody>
                                <tr style="height: 23px;">
                                    <td class="border-top " style="width: 135px; height: 23px;">Private
                                        Email
                                    </td>
                                    <td class="border-top " style="width: 160px; height: 23px;">
                                        <span t-field="employee.private_email"/>
                                    </td>
                                    <td class="border-top " style="width: 140px; height: 23px;">City</td>
                                    <td class="border-top " style="width: 150px; height: 23px;">
                                        <span t-field="employee.private_city"/>
                                    </td>
                                </tr>
                                <tr style="height: 23px;">
                                    <td style="width: 135px; height: 23px;">Phone</td>
                                    <td style="width: 160px; height: 23px;">
                                        <span t-field="employee.private_phone"/>
                                    </td>
                                    <td style="width: 140px; height: 23px;">Km Home-Work</td>
                                    <td style="width: 150px; height: 23px;">
                                        <span t-field="employee.km_home_work"/>
                                    </td>
                                </tr>
                                <tr style="height: 23px;">
                                    <td style="width: 135px; height: 23px;">Nationality</td>
                                    <td style="width: 160px; height: 23px;">
                                        <span t-field="employee.country_id"/>
                                    </td>
                                    <td style="width: 140px; height: 23px;">Identification No</td>
                                    <td style="width: 150px; height: 23px;">
                                        <span t-field="employee.user_id"/>
                                    </td>
                                </tr>
                                <tr style="height: 23px;">
                                    <td style="width: 135px; height: 23px;">Passport No</td>
                                    <td style="width: 160px; height: 23px;">

                                        <span t-field="employee.passport_id"/>
                                    </td>
                                    <td style="width: 140px; height: 23px;">Gender</td>
                                    <td style="width: 150px; height: 23px;">
                                        <span t-field="employee.gender"/>

                                    </td>
                                </tr>
                                <tr style="height: 23px;">
                                    <td style="width: 135px; height: 23px;">Birthday</td>
                                    <td style="width: 160px; height: 23px;">
                                        <span t-field="employee.birthday"/>

                                    </td>
                                    <td style="width: 140px; height: 23px;">Place of Birth</td>
                                    <td style="width: 150px; height: 23px;">
                                        <span t-field="employee.place_of_birth"/>

                                    </td>
                                </tr>
                                <tr style="height: 23px;">
                                    <td style="width: 135px; height: 23px;">Country of Birth</td>
                                    <td style="width: 160px; height: 23px;">
                                        <span t-field="employee.country_of_birth"/>

                                    </td>
                                    <td style="width: 140px; height: 23px;">Marital Status</td>
                                    <td style="width: 150px; height: 23px;">
                                        <span t-field="employee.marital"/>
                                    </td>
                                </tr>
                                <tr style="height: 23px;">
                                    <td style="width: 135px; height: 23px;">Number of Children</td>
                                    <td style="width: 160px; height:23pxx;">
                                        <span t-field="employee.children"/>
                                    </td>
                                    <td style="width: 140px; height: 23px;">Emergency Contact</td>
                                    <td style="width: 150px; height: 23px;">
                                        <span t-field="employee.emergency_contact"/>
                                    </td>
                                </tr>
                                <tr style="height: 23px;">
                                    <td style="width: 135px; height: 23px;">Emergency Phone</td>
                                    <td style="width: 160px; height: 23px;">
                                        <span t-field="employee.emergency_phone"/>
                                    </td>
                                    <td style="width: 140px; height: 23px;">Work Permit</td>
                                    <td style="width: 150px; height: 23px">
                                        <span t-field="employee.permit_no"/>
                                    </td>
                                </tr>
                                <tr style="height: 23px;">
                                    <td style="width: 135px; height: 23px;">Visa Number</td>
                                    <td style="width: 160px; height: 23px;">
                                        <span t-field="employee.visa_no"/>
                                    </td>
                                    <td style="width: 140px; height: 23px;">Field of Study</td>
                                    <td style="width: 150px; height: 23px;">
                                        <span t-field="employee.study_field"/>
                                    </td>
                                </tr>
                                <tr style="height: 23px;">
                                    <td style="width: 135px; height: 23px;">Certificate Level</td>
                                    <td style="width: 160px; height: 23px;">
                                        <span t-field="employee.certificate"/>
                                    </td>
                                    <td style="width: 135px; height: 23px;"></td>
                                    <td style="width: 160px; height: 23px;">
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>


            </t>
        </t>
    </template>
</odoo>