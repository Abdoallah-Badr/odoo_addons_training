<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="upward_contract_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <h3 style="padding:10px ">
                                <span>
                                    <span style="margin:10px" t-esc="doc.name"/>
                                </span>
                            </h3>
<!--                            <div style="direction: rtl;margin:35px">-->
<!--                                <img t-att-src="image_data_uri(doc.employee_id.image_1920)"-->
<!--                                     style="max-height:85pt;max-width:90%"-->
<!--                                     alt="Contract Image"/>-->
<!--                            </div>-->
                            <div style=" margin-right:32px;">
                                <div class="row mb-3"> <!-- Added margin-bottom to create space -->
                                    <div class="col-xs-12">
                                        <table class="table table-bordered" style="#007bff ; ">
                                            <tbody>
                                                <tr>
                                                    <td style="width:300px">Employee</td>
                                                    <td>
                                                        <span>
                                                            <span style="margin:10px" t-esc="doc.employee_id.name"/>
                                                        </span>
                                                    </td>

                                                </tr>
                                                <tr>
                                                    <td style="width:300px">Jop Position</td>
                                                    <td>
                                                        <span>
                                                            <span style="margin:10px" t-esc="doc.job_id.name"/>
                                                        </span>
                                                    </td>

                                                </tr>

                                                <tr>
                                                    <td>Department</td>
                                                    <td>
                                                        <span>
                                                            <span style="margin:10px" t-esc="doc.department_id  "/>
                                                        </span>
                                                    </td>

                                                </tr>
                                                <tr>
                                                    <td>Contract Type</td>
                                                    <td>
                                                        <span>
                                                            <span style="margin:10px"
                                                                  t-esc="doc.contract_type_id.name"/>
                                                        </span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Structure Type</td>
                                                    <td>
                                                        <span>
                                                            <span style="margin:10px"
                                                                  t-esc="doc.structure_type_id.name"/>
                                                        </span>
                                                    </td>
                                                </tr>


                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin-bottom:10px;">
                                <div class="col-xs-4">
                                    <div>
                                        <!-- Title with underline and bold -->
                                        <h4 style="padding:10px ; display:inline-block">
                                            Additional Information
                                        </h4>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3"> <!-- Added margin-bottom to create space -->
                                <div class="col-xs-12">
                                    <table class="table table-bordered" style="#007bff ; ">
                                        <tbody>
                                            <tr>
                                                <td style="width:300px">Contract Start Date</td>
                                                <td>
                                                    <span>
                                                        <span style="margin:10px" t-esc="doc.job_id.name"/>
                                                    </span>
                                                </td>

                                            </tr>

                                            <tr>
                                                <td>Contract End Date</td>
                                                <td>
                                                    <span>
                                                        <span style="margin:10px" t-esc="doc.date_end"/>
                                                    </span>
                                                </td>

                                            </tr>
                                            <tr>
                                                <td>Working Schedule</td>
                                                <td>
                                                    <span>
                                                        <span style="margin:10px" t-esc="doc.resource_calendar_id.name"/>
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Wage</td>
                                                <td>
                                                    <span>
                                                        <span style="margin:10px" t-esc="doc.wage"/>
                                                    </span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>

</odoo>

