<odoo>
    <data>

        <record id="type_form_view" model="ir.ui.view">
            <field name="name">report_options_wizard_form</field>
            <field name="model">report.options.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="mod_orientation"/>

                    </group>
                    <footer>
                        <button name="process" string="Confirm" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="report_options_wizard_action" model="ir.actions.act_window">
            <field name="name">report options</field>
            <field name="res_model">report.options.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="hr.model_hr_employee"/>
        </record>


        <record id="wizard_action_button" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button" position="after">
                    <button name="%(report_options_wizard_action)d" type="action" string="Printing Options"
                            class="btn-secondary"/>
                </xpath>
            </field>

        </record>


    </data>
</odoo>