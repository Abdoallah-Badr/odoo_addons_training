<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name='model'>estate.property</field>
        <field name='arch' type="xml">
            <form delete="0">
                <sheet>
                    <div class="on_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>

                        <group>
                            <field name="property_tag_id" widget="many2many_tags"/>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="description"/>
                            <field name="date_availability"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="bedrooms"/>
                        </group>
                        <group>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garden_area"/>
                            <field name="garage"/>
                            <field name="garden"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description" name="Description">
                            <group>
                                <field name="description" placeholder="Enter your Deescription"/>
                            </group>
                        </page>
                        <page string="offers" name="Offers">
                            <group>
                                <field name="expected_price"/>
                            </group>
                        </page>
                        <page string="other_info" name="Other Info">
                            <group>
                                <field name="buyer_id"/>
                                <field name="seller_id"/>
                            </group>
                        </page>
                    </notebook>


                </sheet>
                <div class="oe_chatter">
                </div>
            </form>
        </field>
    </record>
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name='model'>estate.property</field>
        <field name='arch' type="xml">
            <tree>
                <field name="name"/>
                <field name="postcode"/>
                <field name="description"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
            </tree>
        </field>
    </record>

    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name='model'>estate.property</field>
        <field name='arch' type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/>
                <group expand="0" string="">
                    <filter name="postcode_group" string="Postcode Group" context="{'group_by':'postcode'}"/>
                </group>
                <filter name="garden_filter" string="Garden" domain="[('garden','=','true')]"/>
            </search>
        </field>
    </record>

    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first sale!
            </p>
        </field>
    </record>

    <menuitem id="estate_property_menu"
              name="Properties"
              sequence="0"
              parent="advertisments_root_menu"
              action="action_estate_property"/>
</odoo>