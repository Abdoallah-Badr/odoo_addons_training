<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_estate_property_type_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name='model'>estate.property.type</field>
        <field name='arch' type="xml">
            <form delete="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    <button name="%(estate.action_estate_property_offers_2)d" type="action" class="oe_stat_button" icon="fa-money">
                                <field name="offer_count" widget="statinfo" string="Offers"/>
                        </button>
                    </div>
                    <group>

                        <field name="name"/>
                        <field name="offer_count"/>
                        <field name="property_ids">

                            <tree editable="bottom" string="Tags">
                                <field name="name"/>
                                <field name="expected_price"/>
                                <field name="status"/>

                            </tree>
                        </field>
                    </group>
                </sheet>

            </form>
        </field>
    </record>
    <record id="view_estate_property_type_tree" model="ir.ui.view">
        <field name="name">estate.property.type.tree</field>
        <field name='model'>estate.property.type</field>
        <field name='arch' type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="property_ids">
                    <tree editable="bottom" string="Tags">
                        <field name="name" widget="handle"/>
                        <field name="expected_price"/>
                        <field name="status"/>
                    </tree>
                </field>
            </tree>
        </field>
    </record>

    <record id="view_estate_property_type_search" model="ir.ui.view">
        <field name="name">estate.property.type.search</field>
        <field name='model'>estate.property.type</field>
        <field name='arch' type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="action_estate_property_type" model="ir.actions.act_window">
        <field name="name">Property Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first sale!
            </p>
        </field>
    </record>

    <menuitem id="estate_property_type_menu"
              name="Property Type"
              sequence="1"
              parent="settings_root_menu"
              action="action_estate_property_type"/>
</odoo>