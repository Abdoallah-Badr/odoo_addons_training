<odoo>
    <data>

        <record id="properties_type_tree_view" model="ir.ui.view">
            <field name="name">properties Type tree</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="property_ids" widget="many2many_tags"/>
                    <field name="offer_ids" widget="many2many_tags"/>
                    <field name="offer_count"/>
                </tree>
            </field>
        </record>

        <record id="properties_type_form_view" model="ir.ui.view">
            <field name="name">Properties Type form</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <form>
                    <button class="oe_stat_button" type="action" name="real_state.offers_action"
                            icon="fa-money" widget="statusbar">
                        <field name="offer_count" string=" Offer" widget="statinfo"/>
                    </button>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="property_ids">
                                <tree string="Property" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="property_type_kanban_view" model="ir.ui.view">
            <field name="name">Property Type Search</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div>
                                    <t>
                                        <field name="property_ids" widget="many2many_tags"/>
                                    </t>
                                </div>
                                <div>
                                    Offer Count:
                                    <field name="offer_count"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="property_type_search_view" model="ir.ui.view">
            <field name="name">Property Type Search</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="property_ids"/>
                </search>
            </field>
        </record>

        <record id="properties_type_action" model="ir.actions.act_window">
            <field name="name">Properties Type</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>
    </data>
</odoo>