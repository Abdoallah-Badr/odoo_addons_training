<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="test_report_task" model="ir.actions.report">
            <field name="name">test report task</field>
            <field name="model">estate.property</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">real_state.test_form_report</field>
            <field name="report_file">real_state.test_form_report</field>
            <field name="binding_model_id" ref="model_estate_property"/>
            <field name="binding_type">report</field>
        </record>

        <template id="real_state.test_form_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
