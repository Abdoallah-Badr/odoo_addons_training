<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="courses_view_form" model="ir.ui.view">
        <field name="name">courses.view.form</field>
        <field name ='model'>courses.managment</field>
        <field name ='arch' type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="lectures"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="courses_view_tree" model="ir.ui.view">
        <field name="name">courses.view.tree</field>
        <field name ='model'>courses.managment</field>
        <field name ='arch' type="xml">
            <tree>
                <field name="name"/>
                <field name="lectures"/>


            </tree>
        </field>
    </record>

    <record id="courses_action_view" model="ir.actions.act_window">
        <field name="name">Courses Managment</field>
        <field name="res_model">courses.managment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="courses_menu"
              name="Courses "
              sequence="4"
              parent="school_menu"
              action="courses_action_view"/>


</odoo>