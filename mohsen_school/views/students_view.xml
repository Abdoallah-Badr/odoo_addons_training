<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="students_view_form" model="ir.ui.view">
        <field name="name">students.view.form</field>
        <field name='model'>students.managment</field>
        <field name='arch' type="xml">
            <form multi_edit="1" edit="1" create="1" delete="1">
                <sheet>
                    <div class="on_title">
                        <label for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                    </div>
                    <header>
                        <field name="state"
                               widget="statusbar"
                               statusbar_visible="applied,waiting,accepted"
                               options="{'clickable':1}"
                        />
                    </header>
                    <group>
                        <group string ="General Info">

                            <field name="age"/>
                            <field name="grade"/>
                            <field name="is_old" invisible="1"/>
                            <field name="class_id" />


                        </group>
                        <group string="Additional Info">
                            <field name="summary" />
                            <field name="gender"/>
                            <field name="student_seq"/>
                            <field name="num_of_courses" invisible="is_old == 0" />
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
    <record id="students_view_tree" model="ir.ui.view">
        <field name="name">students.view.tree</field>
        <field name='model'>students.managment</field>
        <field name='arch' type="xml">
            <tree>
                <field name="name"/>
                <field name="summary"/>
                <field name="age"/>
                <field name="grade"/>
                <field name="gender" optional="1"/>
<!--                <field name="id"/>-->
            </tree>
        </field>
    </record>

    <record id="students_view_search" model="ir.ui.view">
        <field name="name">students.view.search</field>
        <field name='model'>students.managment</field>
        <field name='arch' type="xml">
            <search>
                <field name="name"/>
                <field name="age"/>
                <filter name="is_male" string="Is Male" domain="[('gender','=','male')]"/>
                <filter name="is_female" string="Is Female" domain="[('gender','=','female')]"/>

                <filter name="grade_group" string="Grade Group"  context="{'group_by':'grade'}" />

            </search>
        </field>
    </record>
    <record id="students_action_view" model="ir.actions.act_window">
        <field name="name">students Managment</field>
        <field name="res_model">students.managment</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="students_menu"
              name="Students"
              sequence="1"
              parent="school_menu"
              action="students_action_view"/>

</odoo>