<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="classroom_view_form" model="ir.ui.view">
        <field name="name">classroom.view.form</field>
        <field name ='model'>classroom.managment</field>
        <field name ='arch' type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="summary"/>
                        <field name="num_of_students"/>
                        <field name="student_ids" widget="many2many_tags" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="classroom_view_tree" model="ir.ui.view">
        <field name="name">classroom.view.tree</field>
        <field name ='model'>classroom.managment</field>
        <field name ='arch' type="xml">
            <tree>
                <field name="name"/>
                <field name="summary"/>
                <field name="num_of_students"/>
            </tree>
        </field>
    </record>


    <record id="classroom_action_view" model="ir.actions.act_window">
        <field name="name">Classroom Managment</field>
        <field name="res_model">classroom.managment</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="classroom_menu"
              name="Classrooms"
              sequence="3"
              parent="school_menu"
              action="classroom_action_view"/>
</odoo>