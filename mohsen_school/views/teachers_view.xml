<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="teachers_view_form" model="ir.ui.view">
        <field name="name">teachers.view.form</field>
        <field name ='model'>teachers.managment</field>
        <field name ='arch' type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="summary"/>
                        <field name="joinig_date"/>
                        <field name="years_of_experience"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="teachers_view_tree" model="ir.ui.view">
        <field name="name">teachers.view.tree</field>
        <field name ='model'>teachers.managment</field>
        <field name ='arch' type="xml">
            <tree>
                <field name="name"/>
                <field name="summary"/>
                <field name="joinig_date"/>
                <field name="years_of_experience"/>
            </tree>
        </field>
    </record>


    <record id="teachers_action_view" model="ir.actions.act_window">
        <field name="name">Teachers Managment</field>
        <field name="res_model">teachers.managment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="teachers_menu"
              name="Teachers"
              sequence="2"
              parent="school_menu"
              action="teachers_action_view"/>
</odoo>